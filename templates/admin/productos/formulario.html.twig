{% extends 'admin/base_admin.html.twig' %}

{% block titulo %}{{ titulo }} - Admin{% endblock %}

{% block cuerpo_admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>{{ titulo }}</h2>
        <a href="{{ path('admin_productos_listar') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(formulario, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(formulario.nombre) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(formulario.precio) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(formulario.categoria) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(formulario.descripcion) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(formulario.archivoFoto) }}
                    </div>
                    <div class="col-md-6">
                        {# Vista previa de la imagen actual #}
                        {% if producto is defined and producto.fotoPrincipal %}
                            <label class="form-label">Imagen actual</label>
                            <div>
                                <img src="/recursos/camisas/{{ producto.fotoPrincipal }}"
                                     alt="Foto actual" class="img-thumbnail" style="max-height: 150px;">
                                <small class="d-block text-muted mt-1">{{ producto.fotoPrincipal }}</small>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Guardar
                    </button>
                    <a href="{{ path('admin_productos_listar') }}" class="btn btn-secondary ms-2">Cancelar</a>
                </div>

            {{ form_end(formulario) }}
        </div>
    </div>
{% endblock %}
