<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block titulo %}Admin - Tienda Zara{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar { min-height: 100vh; background: #1a1a2e; }
        .sidebar a { color: #ccc; text-decoration: none; padding: 12px 20px; display: block; transition: 0.2s; }
        .sidebar a:hover, .sidebar a.active { color: #fff; background: #16213e; }
        .contenido-principal { background: #f5f5f5; min-height: 100vh; }
        .tarjeta-resumen { border: none; border-radius: 12px; transition: transform 0.2s; }
        .tarjeta-resumen:hover { transform: translateY(-2px); }
    </style>
    {% block estilos_extra %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            {# === Barra lateral === #}
            <nav class="col-md-2 sidebar d-flex flex-column p-0">
                <div class="p-3 text-white text-center border-bottom border-secondary">
                    <h5 class="mb-0"><i class="bi bi-shop"></i> Admin Zara</h5>
                </div>
                <a href="{{ path('admin_panel') }}" class="{{ app.request.attributes.get('_route') == 'admin_panel' ? 'active' : '' }}">
                    <i class="bi bi-speedometer2"></i> Panel
                </a>
                <a href="{{ path('admin_productos_listar') }}" class="{{ 'admin_productos' in app.request.attributes.get('_route') ? 'active' : '' }}">
                    <i class="bi bi-box-seam"></i> Productos
                </a>
                <a href="{{ path('admin_categorias_listar') }}" class="{{ 'admin_categorias' in app.request.attributes.get('_route') ? 'active' : '' }}">
                    <i class="bi bi-tags"></i> Categorías
                </a>
                <div class="mt-auto p-3 border-top border-secondary">
                    <a href="{{ path('app_logout') }}" class="text-danger">
                        <i class="bi bi-box-arrow-left"></i> Cerrar sesión
                    </a>
                </div>
            </nav>

            {# === Contenido principal === #}
            <main class="col-md-10 contenido-principal p-4">
                {# Mensajes flash #}
                {% for tipo, mensajes in app.flashes %}
                    {% for mensaje in mensajes %}
                        <div class="alert alert-{{ tipo == 'exito' ? 'success' : tipo }} alert-dismissible fade show">
                            {{ mensaje }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block cuerpo_admin %}{% endblock %}
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block scripts_extra %}{% endblock %}
</body>
</html>
