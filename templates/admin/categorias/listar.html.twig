{% extends 'admin/base_admin.html.twig' %}

{% block titulo %}Categorías - Admin{% endblock %}

{% block cuerpo_admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Categorías</h2>
        <a href="{{ path('admin_categorias_nueva') }}" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Nueva Categoría
        </a>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Nº Productos</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categoria in categorias %}
                        <tr>
                            <td>{{ categoria.id }}</td>
                            <td>{{ categoria.nombre }}</td>
                            <td>
                                <span class="badge bg-info">{{ categoria.productos|length }}</span>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('admin_categorias_editar', {id: categoria.id}) }}"
                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="{{ path('admin_categorias_eliminar', {id: categoria.id}) }}"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('¿Eliminar esta categoría?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('eliminar_' ~ categoria.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No hay categorías registradas</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
